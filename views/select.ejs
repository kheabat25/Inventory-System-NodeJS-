<h1>List of Items</h1>

<a href="/form">Form Insert</a>

<table>
  <tr>
    <td>id</td>
    <td>name</td>
    <td>qty</td>
    <td>amount</td>
    <td></td>
  </tr>
  <% items.forEach(item => { %>
  <tr>
    <td><%= item.id %></td>
    <td><%= item.name %></td>
    <td><%= item.qty %></td>
    <td><%= item.amount %></td>
    <td>
      <a
        href="/delete?id=<%= item.id %>"
        onClick="return confirm('Are you sure?')"
        >Delete</a
      >
    </td>
  </tr>
  <% }); %>
</table>
